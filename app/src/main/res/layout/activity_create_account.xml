<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.midhapranav.eventos.CreateAccountActivity">

    <RelativeLayout
        android:id="@+id/create_account_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:textSize="40dp"
            android:text="Create Account!"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/create_account_name"
        android:layout_below="@+id/create_account_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="25dp">
        <TextView
            android:id="@+id/create_account_name_text_view"
            android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:text="Name"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/create_account_name_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/create_account_name_text_view"
            android:layout_toRightOf="@+id/create_account_name_text_view" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/create_account_email"
        android:layout_below="@+id/create_account_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="25dp">
        <TextView
            android:id="@+id/create_account_email_text_view"
            android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:text="Email"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/create_account_email_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/create_account_email_text_view"
            android:layout_toRightOf="@+id/create_account_email_text_view" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/create_account_password"
        android:layout_below="@+id/create_account_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="25dp">
        <TextView
            android:id="@+id/create_account_password_text_view"
            android:layout_height="25dp"
            android:layout_width="wrap_content"
            android:text="Password"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/create_account_password_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/create_account_password_text_view"
            android:layout_toRightOf="@+id/create_account_password_text_view" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/create_account_create_button"
        android:layout_below="@+id/create_account_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingLeft="25dp">
        <Button
            android:id="@+id/create_account_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:text="Create Account"
            />
    </RelativeLayout>
</RelativeLayout>
